# EditorConfig is awesome: https://EditorConfig.org

root = true

[*.{js,ts}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = single
block_comment_start = /**
block_comment = *
block_comment_end = */
max_line_length = off

[*.md]
indent_size = 4
