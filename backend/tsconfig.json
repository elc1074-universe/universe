{
   "compilerOptions": {
      "lib": [
         "es7"
      ],
      "target": "es5",
      "module": "commonjs",
      "types": [
         "node"
      ],
      "typeRoots": [
         "node_modules/@types"
      ],
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true
   }
}
